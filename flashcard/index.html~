  <script>
  


$(document).ready(function() {
		$('.panel-body').hide();
		$('#password').focus();
var cards=[];
addCard("やわらか","yawaraka","soft");
addCard("やわらかな日差し","yawaraka na hizashi","a soft sunlight");
addCard("ピカピカ","pikapika","shiny");
addCard("ピカピカのランドセル","pikapika no randoseru","a shiny school bag");
addCard("ランドセル","rendoseru","ransel;backpack");
function addCard(w,s,t)
{
var card = {word:w, sound:s,tr:t, right:0};
cards.push(card);
}
var linesIndex=[];
for(var i=0;i<cards.length;i++){
		linesIndex.push(i);
	}
	linesIndex = shuffle(linesIndex);
	console.log(linesIndex);
	
	var curIndex=0;
	loadCard();
function play(text,lang){
var audio = new Audio();
audio.src ='http://translate.google.com/translate_tts?ie=utf-8&tl='+lang+'&q='+text+'&client=tw-ob';
audio.play();
}
function loadCard(){
		    $('#count').text((curIndex+1)+"/"+cards.length);
		    $('.panel-body').hide();
card=cards[linesIndex[curIndex]];
play(card["tr"],'en');
$('.panel-heading').html(card["tr"]);
$('.panel-body').html("<span id='word' style='font-weight: bolder;font-size: xx-large;'>"+card["word"]+"</span></br><span style='text-decoration: underline;font-size: x-large;font-style: italic;color: darkgrey;'>"+card["sound"]+"<span>");
}
function goNext(){
		    curIndex++;
		    if(curIndex==cards.length){
		    $('#word').text('all test complete,press F5 to restart test');
		    }else{
	loadCard();
		$('#password').val('');
		$('#password').focus();
		
}
$("#password").on("change keypress keyup keydown", function() {
		    console.log($(this).val()+','+$('#word').text());
		    if($(this).val().toLowerCase()=="pass"){
		    console.log("==pass==");
		    $('.panel-body').show();
play($('#word').text(),'ja');
		$('#password').val('');
		$('#password').focus();
		    }else 
		    if($(this).val().toLowerCase()=="next"){
		    console.log("==next==");
		    goNext();
		    }else 
		    if($(this).val()==$('#word').text()&&$(this).val().length>0){
		    console.log("==match=="+$(this).val()+','+$('word').text());
		    goNext();
		    }
        //$("#strength_human").text(checkPassStrength(pass));
        //$("#strength_score").text(scorePassword(pass));
    });
});
</script>
